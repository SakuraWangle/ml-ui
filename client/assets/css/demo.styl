.dd-body {
  display: flex;
  height: 100%;
  flex-direction: column;
  .dd-label {
    padding: 10px 0;
    font-size: 16px;
    color: #666;
  }
  .dd-warp {
    flex: 1;
    font-size: 18px;
    position: relative
  }
  .warp-content {
    padding: 0 20px;
    top: 50%;
    position: absolute;
    width: 100%;
    transform: translateY(-50%);
  }
  .warp-ctt {
    padding: 10px 20px;
  }
  .dd-btn {
    display: block;
    padding: 10px;
    width: 100%;
    border-radius: 10px;
    text-align: center;
    border-color: #ccc;
    background-color: #fff;
    font-size: 14px;
    box-shadow: 0 0 10px #b8bbbf;
    margin-bottom: 10px;
  }
  .pf6 {
    padding-left: 6px;
  }
  .pr6 {
    padding-right: 6px;
  }
  .dd-range {
    padding: 5px 20px;
  }
  .range-label {
    padding-top: 5px;
    font-size: 14px;
  }
}