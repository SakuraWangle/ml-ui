.ml-loading {
  position: absolute;
  transform: translate(-50%, -50%);
  top: 50%;
  left: 50%;
  max-width: 100px;
  max-height: 100px;
  .spinner-one {
    width: 100%;
    height: 100%;
    background-color: $color-success;
    -webkit-animation: rPlane 1.2s infinite ease-in-out;
  }
  @-webkit-keyframes rPlane {
    0% {
      -webkit-transform: perspective(120px)
    }
    50% {
      -webkit-transform: perspective(120px) rotateY(180deg);
    }
    100% {
      -webkit-transform: perspective(120px) rotateY(180deg) rotateX(180deg)
    }
  }
  .spinner-two {
    width: 100%;
    height: 100%;
    position: relative;
    -webkit-animation: rCri 1.2s linear infinite;
    .sto-dv {
      width: 100%;
      height: 100%;
      position: absolute;
    }
    span {
      width: 50%;
      height: 18%;
      border-radius: 50%;
      background-color: $color-success;
      position: absolute;
      left: 50%;
      top: 20%;
    }
    @-webkit-keyframes rCri {
      0% {
        -webkit-transform: rotate(0deg);
      }
      100% {
        -webkit-transform: rotate(360deg);
      }
    }
    .sto-dv:nth-child(1) {
      -webkit-transform: rotate(120deg);
    }
    .sto-dv:nth-child(2) {
      -webkit-transform: rotate(240deg);
    }
  }
}