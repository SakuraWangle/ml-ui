.ml-model {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: transparent;
  z-index: 1002;
  .mml-com {
    position: absolute;
    background-color: #fff;
    transition: $scale-fade-transition;
    transform: translateZ(0);
  }
  .mml-middle {
    width: 80%;
    top: 50%;
    left: 10%;
    transform: translate3d(0, -50%, 0);
    border-radius: $border-radius;
    overflow: hidden;
  }
  .mml-middle-enter, .mml-middle-leave-active {
    opacity: 0;
    transform: translate3d(0, -50%, 0) scale(0.7);
  }
  .mml-top {
    top: 0;
    left: 0;
    width: 100%;
  }
  .mml-top-enter, .mml-top-leave-active {
    opacity: 0;
    transform: translate3d(0, -100%, 0);
  }
  .mml-right {
    height: 100%;
    right: 0;
    top: 0;
  }
  .mml-right-enter, .mml-right-leave-active {
    transform: translate3d(101%, 0, 0);
  }
  .mml-bottom {
    bottom: 0;
    left: 0;
    width: 100%;
  }
  .mml-bottom-enter, .mml-bottom-leave-active {
    opacity: 0;
    transform: translate3d(0, 101%, 0);
  }
  .mml-left {
    height: 100%;
    left: 0;
  }
  .mml-left-enter, .mml-left-leave-active {
    opacity: 0;
    transform: translate3d(-100%, 0, 0);
  }
  .mml-opy, .mml-opy-leave-active {
    opacity: 0;
  }
}

.ml-mask-bg {
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.34);
  z-index: -1;
  transition: $fade-transition;
}

.ml-mask-clarity {
  background-color: transparent;
}