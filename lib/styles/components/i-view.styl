.ml-i-view {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.8);
}

.ii-test {
  position: absolute;
  z-index: 1111;
  font-size: 22px;
  top: 0;
  left: 0;
  color: #fff;
}

.ml-i-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  transform: translate3d(0, 0, 0);
  img {
    display: block;
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    z-index: 999;
    background-color #409eff;
  }
  .ml-ii-top {
    top: 0;
    transform: translateX(-50%);
  }
  .ml-ii-left {
    left: 0;
    transform: translateY(-50%);
  }
  .ml-ii-top.ml-ii-left {
    top: 0;
    left: 0;
    transform: translate3d(0, 0, 0);
  }
}