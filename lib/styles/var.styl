/* ml-ui Variables*/

/* Transition
-------------------------- */
$all-transition = all .3s cubic-bezier(.645, .045, .355, 1);
$scale-fade-transition = opacity .2s ease-out, transform .2s ease-out;
$fade-transition = opacity .3s cubic-bezier(0.23, 1, 0.32, 1);

/* Colors
-------------------------- */
$color-prompt1 = #666;
$color-prompt2 = #999;
$color-aaa = #ccc;
$color-link = #66b1ff;
$color-success = #4ebb18;
$color-warning = #eb9e05;
$color-error = #f56c6c;
$color-danger = #fa5555;
$color-info = #878d99;
$color-primary = #409EFF;
$color-border = #bfcbd9;

/* Font
-------------------------- */
$font-size = 14px;
$font-min-size = 12px;
$font-max-size = 16px;
$font-18-size = 18px;
$border-radius = 5px;

/* common
-------------------------- */
.inline-block {
  display: inline-block;
  vertical-align: middle;
}

.ml-back-top {
  position: absolute;
  width: 46px;
  height: 46px;
  bottom: 25px;
  right: 25px;
  opacity: 0.55;
  border-radius: 100%;
  background-color: #000;
  font-size: 12px;
  color: #ff;
  text-align: center;
  z-index: 99;
  i {
    font-size: 24px;
    margin-bottom: -2px;
  }
}

/* animation
-------------------------- */
@-webkit-keyframes turnAround {
  from {
    -webkit-transform: rotate(0deg)
  }
  to {
    -webkit-transform: rotate(-360deg)
  }
}

/* border
-------------------------- */
.ml-border {
  border: 1px solid transparent;
  box-sizing: border-box;
  box-shadow: 0 0 2px transform;
}
